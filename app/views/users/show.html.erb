<%= provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.micro_posts.any? %>
        <h3>MicroPosts ( <%= @user.micro_posts.count %> )</h3>
        <ol class="microposts">
          <%= render @micro_posts %>
        </ol>
        <%= will_paginate @micro_posts, renderer: BootstrapPagination::Rails %>
    <% end %>
  </div>
</div>